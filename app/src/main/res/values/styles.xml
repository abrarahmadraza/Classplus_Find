<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="bottomSheetDialogTheme">@style/CurvedBottomSheetDialog</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textSize">16sp</item>
        <item name="actionButtonStyle">@style/AppTheme.Widget.ActionButton</item>
        <item name="colorSecondary">@color/colorPrimary</item>
        <item name="colorOnSecondary">@color/white</item>

    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/line_grey</item>
        <item name="boxStrokeWidth">1dp</item>
    </style>

    <style name="PosterEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="background">@color/white</item>
        <item name="paddingEnd">0dp</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="singleLine">true</item>
        <item name="maxLines">1</item>
        <item name="android:textSize">18sp</item>
        <item name="theme">@style/TextInputLayoutStyle</item>
    </style>

    <style name="PosterTextInputStyle" parent="Widget.Design.TextInputLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="hintTextColor">@color/colorPrimary</item>
    </style>

    <style name="ActivityWhiteToolbarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- This attributes is used by title -->
        <item name="android:textColorPrimary">@color/black</item>
        <item name="colorControlNormal">@color/black</item>

        <!-- This attributes is used by navigation icon and overflow icon -->
        <item name="colorOnPrimary">@color/black</item>
    </style>

    <style name="ActivityWhiteToolbarThemeNew" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- This attributes is used by title -->
        <item name="android:textColorPrimary">@color/black</item>
        <item name="colorControlNormal">@color/black</item>

        <!-- This attributes is used by navigation icon and overflow icon -->
        <item name="colorOnPrimary">@color/black</item>
    </style>



    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/black</item>
    </style>


    <style name="Theme.Transparent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="BottomNavigation.ActiveItemTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="Translucent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="WhiteToolbarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:color">@color/white</item>
    </style>

    <style name="ToolbarColoredBackArrow" parent="AppTheme">
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="AppTheme.Widget.ActionButton" parent="@style/Widget.AppCompat.ActionButton">
        <item name="textAllCaps">false</item>
    </style>

    <!-- Theme in which bottom sheet dialog will be curved on top corners -->
    <style name="CurvedBottomSheetDialogTheme" parent="AppTheme">
        <item name="bottomSheetDialogTheme">@style/CurvedBottomSheetDialog</item>
    </style>

    <style name="CurvedBottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
    </style>


    <style name="BaseTextAppearance">
        <item name="android:gravity">top</item>
    </style>

    <style name="BaseTextAppearance.Title" parent="BaseTextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#DE000000</item>
    </style>

    <style name="BaseTextAppearance.BatchDetailInput" parent="BaseTextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#DE000000</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
    </style>

    <style name="BaseTextAppearance.BatchDetail" parent="BaseTextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#DE000000</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="BaseTextAppearance.HeavyWeightTitle" parent="BaseTextAppearance">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#DE000000</item>
        <item name="android:layout_weight">500</item>
    </style>

    <style name="BaseTextAppearance.SubTitle" parent="BaseTextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#99000000</item>
    </style>

    <style name="BaseTextAppearance.SmallSubTitle" parent="BaseTextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#99000000</item>
    </style>

    <style name="BaseTextAppearance.BoldTitle" parent="BaseTextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#DE000000</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BaseTextAppearance.BoldLargeTitle" parent="BaseTextAppearance">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#DE000000</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BaseTextAppearance.ShadowBoldTitle" parent="BaseTextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#99000000</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BaseTextAppearance.ShadowTitle" parent="BaseTextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#DE000000</item>
    </style>

    <style name="BaseTextAppearance.UpperCaseTitle" parent="BaseTextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#777777</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="BaseTextAppearance.UpperCaseTitleBatch" parent="BaseTextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
        <item name="alpha">.2</item>
    </style>

    <style name="BaseTextAppearance.MediumWeightTitle" parent="BaseTextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#99000000</item>
        <item name="android:layout_weight">500</item>
    </style>


    <style name="TabLayout" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="textAllCaps">true</item>
        <item name="android:textAllCaps">true</item>
    </style>


    <style name="empty_subhead">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#000000</item>
    </style>


    <style name="empty_button_text_style">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#009AE0</item>
    </style>

    <style name="MyRatingBar">
        <item name="colorControlActivated">#D4AF37</item>
    </style>

    <style name="MyCheckbox" parent="@style/Widget.AppCompat.CompoundButton.CheckBox">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="CouponCheckbox" parent="@style/Widget.AppCompat.CompoundButton.CheckBox">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="TrackSelectionDialogThemeOverlay" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="windowNoTitle">false</item>
    </style>

    <style name="PlayerTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@android:color/black</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SwitchTheme" parent="Theme.AppCompat.Light">
        <item name="android:colorControlActivated" tools:targetApi="lollipop">#009AE0
        </item><!--#148E13-->
    </style>

    <style name="AlertDialogTheme" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="colorPrimary">@color/colorAccent</item>
    </style>
</resources>